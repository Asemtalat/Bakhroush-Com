<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_vat" model="ir.ui.view">
            <field name="name">account.move.vat</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                   <page string="More Details">
                        <group>
                            <field name="attention" attrs="{'required': [('move_type','=','out_invoice')]}"/>
                            <field name="approved_by" attrs="{'required': [('move_type','=','out_invoice')]}"/>
                            <field name="vat_text" attrs="{'required': [('move_type','=','out_invoice')]}"/>
                            <field name="vat_arabic_text" attrs="{'required': [('move_type','=','out_invoice')]}"/>
                        </group>
                        <group>
                            <field name="amount_text"/>
                            <field name="amount_in_ar"/>
                        </group>
                    </page>

                </xpath>
            </field>
        </record>

        <record id="view_res_bank_form" model="ir.ui.view">
			<field name="name">res.bank.form</field>
            <field name="model">res.bank</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='bic']" position="after">
					<field name="iban"/>
                    <field name="branch"/>
                </xpath>
          	</field>
       </record>

        <record id="view_tax_form" model="ir.ui.view">
			<field name="name">account.tax.form</field>
            <field name="model">account.tax</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='tax_scope']" position="after">
					<label for="amount_in_arabic" attrs="{'invisible':[('amount_type','not in', ('fixed', 'percent', 'division'))]}"/>
                    <div attrs="{'invisible':[('amount_type','not in', ('fixed', 'percent', 'division'))]}">
                        <field name="amount_in_arabic" class="oe_inline"/>
                        <span class="o_form_label oe_inline" attrs="{'invisible':[('amount_type','=','fixed')]}">%</span>
                    </div>
                </xpath>
          	</field>
       </record>
</odoo>