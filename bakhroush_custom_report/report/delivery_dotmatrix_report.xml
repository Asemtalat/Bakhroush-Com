<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_report_delivery_dot_bakhroush" model="ir.actions.report">
        <field name="name">Delivery Slip - Bakhroush (Normal)</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bakhroush_custom_report.report_deliveryslip_dot_bakhroush</field>
        <field name="report_file">bakhroush_custom_report.report_deliveryslip_dot_bakhroush</field>
        <field name="print_report_name">'Delivery Slip - %s - %s' % (object.partner_id.name or '', object.name)</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="paperformat_id" ref="bakhroush_custom_report.paperformat_bakhroush_1"/>
        <field name="binding_type">report</field>
    </record>


    <template id="report_deliveryslip_dot_bakhroush">
        <t t-foreach="docs" t-as="o">
            <t t-call="bakhroush_custom_report.report_delivery_document_dot_bakhroush" t-lang="o.partner_id.lang"/>
        </t>
    </template>


    <template id="report_delivery_document_dot_bakhroush">
        <t t-call="web.html_container">
            <t t-call="bakhroush_custom_report.external_layout_bakhroush">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>

                <div class="page">
                    <table style="font-family:Calibri;font-size: 13px;border-collapse: collapse;">
                        <tr style="height:10mm;">
<!--                            Invoice No.-->
                            <td style="width:30mm;text-align:left;"></td>
                            <td style="width:47mm;text-align:center;"><span t-field="o.invoice_no"/></td>
                            <td style="width:35mm;text-align:right;"></td>

                            <td style="width:43mm;text-align:center;font-size: 15px;font-weight:bold"></td>
<!--                            Date-->
                            <td style="width:30mm;text-align:left;"></td>
                            <td style="width:54mm;text-align:center;"><span t-field="o.scheduled_date"/></td>
                            <td style="width:30mm;text-align:right;"></td>
                        </tr>
                        <tr style="height:10mm;">
<!--                            Customer No.-->
                            <td style="width:30mm;text-align:left;"></td>
                            <td style="width:47mm;text-align:center;"><span t-field="o.customer_no"/></td>
                            <td style="width:35mm;text-align:right;"></td>

                            <td style="width:43mm;text-align:center;font-size: 15px;font-weight:bold"></td>
<!--                            Corresponding-->
                            <td style="width:30mm;text-align:left;"></td>
                            <td style="width:54mm;text-align:center;"><span t-field="o.corresponding"/></td>
                            <td style="width:30mm;text-align:right;"></td>
                        </tr>
                        <tr style="height:10mm;">
<!--                            Mobile No.-->
                            <td style="width:30mm;text-align:left;"></td>
                            <td style="width:47mm;text-align:center;"><span t-field="o.mobile_no"/></td>
                            <td style="width:35mm;text-align:right;"></td>

                            <td style="width:43mm;text-align:center;font-size: 20px;font-weight:bold"/>
<!--                            Delivery No.-->
                            <td style="width:30mm;text-align:left;"></td>
                            <td style="width:54mm;text-align:center;"><span t-field="o.name"/></td>
                            <td style="width:30mm;text-align:right;"></td>
                        </tr>

                        <tr style="height:10mm;">
<!--                            Location-->
                            <td style="width:30mm;text-align:left;"></td>
                            <td style="width:47mm;text-align:center;"><span t-field="o.location"/></td>
                            <td style="width:35mm;text-align:right;"></td>
<!--                            Cust. Name-->
                            <td style="width:30mm;text-align:right;"></td>
                            <td colspan="2" style="width:67mm;text-align:center;"><span t-field="o.partner_id.name"/></td>
                            <td style="width:30mm;text-align:right;"></td>
                        </tr>

                        <tr style="height:10mm;">
<!--                            Time Out-->
                            <td style="width:30mm;text-align:left;"></td>
                            <td style="width:47mm;text-align:center;"><span t-field="o.time_out"/></td>
                            <td style="width:35mm;text-align:right;"></td>
<!--                            Car No.-->
                            <td style="width:30mm;text-align:right;"></td>
                            <td colspan="2" style="width:67mm;text-align:center;"><span t-field="o.car_no"/></td>
                            <td style="width:30mm;text-align:right;"></td>
                        </tr>

                        <tr style="height:10mm;">
<!--                            Received Time-->
                            <td style="width:30mm;text-align:left;"></td>
                            <td style="width:47mm;text-align:center;"><span t-field="o.received_time"/></td>
                            <td style="width:35mm;text-align:right;"></td>
<!--                            Driver Name-->
                            <td style="width:30m;text-align:right;"></td>
                            <td colspan="2" style="width:67mm;text-align:center;"><span t-field="o.driver_name"/></td>
                            <td style="width:30mm;text-align:right;"></td>
                        </tr>
                    </table>

                    <table style="font-family:Calibri;font-size: 13px;border-collapse: collapse;">
                        <tr style="height:10mm;">
                            <td style="width:21mm;text-align:center;"></td>
                            <td style="width:44mm;text-align:center;"></td>
                            <td style="width:151mm;text-align:center;"></td>
                            <td style="width:50mm;text-align:center;"></td>
                        </tr>
                        <tr style="height:10mm;">
                            <td style="width:12mm;text-align:center;"></td>
                            <td style="width:44mm;text-align:center;"></td>
                            <td style="width:151mm;text-align:center;"></td>
                            <td style="width:50mm;text-align:center;"></td>
                        </tr>
                        <tbody>
                            <t t-set="i" t-value="1"/>
                            <t t-set="lines" t-value="o.move_line_ids_without_package"/>
                            <tr t-foreach="lines" t-as="move" style="height:10mm;">
                                <td class="text-center">
                                    <span t-esc="i"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="move.barcode"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="move.qty_done"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="move.product_uom_qty"/>
                                </td>
                                 <t t-set="i" t-value="i+1"/>
                             </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
